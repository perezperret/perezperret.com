---
layout: default
---

<div class="min-h-screen bg-white py-32">
  <div class="container mx-auto">
    <div class="max-w-2xl mx-auto">
      <div class="mb-16">
        <h1 class="text-5xl font-bold mb-4"><%= page[:title] %></h1>

        <% if page[:author] %>
          <div class="flex items-center mb-4">
            <div class="text-blue-500"><%= page[:author] %></div>
            <div class="mx-6 text-gray-600">â€“</div>
            <div class="text-gray-600"><%= date_to_string page[:date], 'ordinal', 'US' %></div>
          </div>
        <% end %>

        <% if page[:categories] %>
          <div class="flex">
            <% page[:categories].each do |category| %>
              <div class="text-blue-500 mr-4 uppercase font-bold text-xs"><%= category %></div>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="content">
        <%= content %>
      </div>
    </div>
  </div>
</div>

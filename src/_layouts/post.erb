---
layout: default
---

<div class="min-h-screen bg-white py-32">
  <div class="container mx-auto px-4">
    <div class="mb-20 max-w-2xl">
      <h1 class="text-6xl leading-none heading mb-4"><%= page[:title] %></h1>

      <div class="text-gray-600 mb-2"><%= date_to_string page[:date], 'ordinal', 'US' %></div>

      <div class="flex flex-wrap">
        <% page[:categories].each do |category| %>
          <div class="text-blue-500 mr-4 uppercase font-bold text-xs"><%= category %></div>
        <% end %>
      </div>
    </div>

    <div class="max-w-2xl content mb-16">
      <%= yield %>
    </div>

    <div class="max-w-2xl content">
      <em>
        Any corrections, comments, ideas or suggestions? Email me at
        <a href="mailto:santiago@perezperret.com">santiago@perezperret.com</a>.
        You can also subscribe <a href="/contact">here</a>.
      </em>
    </div>
  </div>
</div>

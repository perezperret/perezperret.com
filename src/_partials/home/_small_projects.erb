<% data = site.data[:home][:small_projects] %>

<div class="bg-white">
  <div id="small_projects" class="container mx-auto py-12">
    <h2 class="text-4xl text-gray-900 max-w-xl font-bold"><%= data[:title] %></h2>
    <h2 class="text-xl mb-16 text-gray-900 max-w-xl font-sans"><%= data[:sub_title] %></h2>

    <div class="flex flex-wrap -mx-12">
      <% data[:content].each do |project| %>
        <div class="px-12 w-1/3 mb-8">
          <a href="<%= project[:url] %>" target="_blank" class="block h-full">
            <div class="text-gray-800">
              <h3 class="font-bold text-gray-900 text-2xl mb-4 border-b-4 border-yellow-400 inline-block"><%= project[:title] %></h3>
              <p class="mb-6"><%= project[:description] %></p>
            </div>
          </a>
        </div>
      <% end %>

      <% data[:links].each do |link| %>
        <div class="px-12 w-1/3 mb-8">
          <a href="<%= link[:url] %>" target="_blank" class="block h-full">
            <h3 class="font-bold text-gray-900 text-2xl mb-4 border-b-4 border-blue-400 inline-block">
              <%= link[:text] %>
            </h3>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% data = site.data[:home][:intro] %>

<div id="intro" class="bg-white py-32">
  <div class="container mx-auto">
    <span class="text-3xl text-gray-700"><%= data[:pre_title] %></span>
    <h1 class="text-6xl font-bold -mt-6 mb-10 text-gray-900"><%= data[:title] %></h1>

    <div class="max-w-xl text-gray-800">
      <% data[:content].each do |p| %>
        <p class="leading-8 text-lg text-gray-800 font-sans mb-4">
          <%= p %>
        </p>
      <% end %>
    </div>
  </div>
</div>
